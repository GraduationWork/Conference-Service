<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.conference.core.domain">

	<class name="Speaker" table="SPEAKERS">
		<id name="id" type="string" column="ID" >
			<generator class="uuid"/>
		</id>
		<property name="name" type="string" column="NAME" />
		<property name="title" type="string" column="TITLE" />
		<property name="photoUrl" type="string" column="PHOTO_URL" />
		<property name="created" type="timestamp" column="CREATED"
			insert="false" update="false" />
		<property name="updated" type="timestamp" column="UPDATED"
			insert="false" />
	</class>
	
	<class name="Place" table="PLACES">
		<id name="id" type="string" column="ID" >
			<generator class="uuid"/>
		</id>
		<property name="countryName" type="string" column="NAME" />
		<property name="administrativeAreaName" type="string" column="NAME" />
		<property name="localityName" type="string" column="NAME" />
		<property name="thoroughfareName" type="string" column="NAME" />
		<property name="premiseNumber" type="string" column="NAME" />
		<property name="query" type="string" column="NAME" />
		<property name="info" type="string" column="NAME" />
		<property name="positionX" type="float" column="NAME" />
		<property name="positionY" type="float" column="NAME" />
		<property name="created" type="timestamp" column="CREATED"
			insert="false" update="false" />
		<property name="updated" type="timestamp" column="UPDATED"
			insert="false" />
	</class>
	
	<class name="Conference" table="CONFERENCES">
		<id name="id" type="string" column="ID" >
			<generator class="uuid"/>
		</id>
		<property name="title" type="string" column="NAME" />
		<property name="startTime" type="timestamp" column="CREATED" />
		<property name="endTime" type="timestamp" column="CREATED" />
		<property name="placeDetails" type="string" column="NAME" />
		<property name="logoUrl" type="string" column="NAME" />
		<property name="videoId" type="string" column="NAME" />
		<property name="created" type="timestamp" column="CREATED"
			insert="false" update="false" />
		<property name="updated" type="timestamp" column="UPDATED"
			insert="false" />
		<one-to-one name="place" class="Place">
			
		</one-to-one>
		<list name=""></list>
		<!-- one to many -->
				
	</class>

	
	

</hibernate-mapping>